<%= form_for @shop, html: { multipart: true } do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= #image_tag(@shop.image_url) if @shop.image? %><br>
    <%= f.label 'Foto da loja' %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label 'Nome da loja' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Saudação' %><br>
    <%= f.text_area :greeting %>
  </div>
  <div class="field">
    <%= f.label 'Número de celular' %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label 'Tem whatsapp?' %><br>
    <%= f.check_box :whatsapp %>
  </div>
  <div class="field">
    <%= f.label 'As pessoas poden ligar para você?' %><br>
    <%= f.check_box :phone %>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-primary', role: 'button', class: 'btn btn-success btn-sm' %>
  </div>
  <br />
<% end %>
