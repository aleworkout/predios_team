<p id="notice"><%= notice %></p>

<div>
    <%= search_form_for @q do |f| %>
  
    <%= f.label "Loja" %>
    <%= f.search_field :name_cont %>
  
    <%= f.submit "Procurar" %>
  
    <% end %>
</div>

<h1>Todas as lojas</h1>
<%= link_to "Minhas lojas", user_shops_path(@shops), role: 'button', class: 'btn btn-success btn-xs' %>
<hr />
<%= link_to 'Nova loja', new_shop_path, role: 'button', class: 'btn btn-warning btn-block' %>
  <div class="row">
    <br />
    <% @shops.each do |shop| %>
    
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag attachment_url(shop, :image, :fill, 300, 300, format: "jpg") %>
          <div class="caption">
            <h3><%= shop.name %></h3>
            <p>"<%= shop.greeting %>".</p>
            <h4><%= shop.number %></h4>
            <% if shop.whatsapp %>
              <ul>
                <li>Tenho Whatsapp</li>
              </ul>
            <% end %>
            <% if shop.phone %>
              <ul>
                <li>Pode me ligar</li>
              </ul>
            <% end %>
            <p>
            <%= link_to 'Entrar na loja', shop, role: 'button', class: 'btn btn-success btn-sm' %>
            <% if current_user.id == shop.user_id %>
              <%= link_to 'Editar', edit_shop_path(shop), role: 'button', class: 'btn btn-success btn-sm' %>
              <%= link_to 'Apagar', shop, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-success btn-sm' %>
            <% end %>  
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'Nova loja', new_shop_path, role: 'button', class: 'btn btn-warning btn-block' %>
