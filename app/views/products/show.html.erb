<p id="notice"><%= notice %></p>

<h1><%= @product.shop.name %></h1>
<h3><%= @product.shop.number %></h3>
            <% if @product.shop.whatsapp %>
              <ul>
                <li>Tenho Whatsapp</li>
              </ul>
            <% end %>
            <% if @product.shop.phone %>
              <ul>
                <li>Pode me ligar</li>
              </ul>
            <% end %>
            
<div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag attachment_url(@product, :image, :fill, 300, 300, format: "jpg") %>
          <div class="caption">
            <h3><%= @product.name %></h3>
            <p>$<%= @product.price %>.-</p>
            <p><%= @product.detail %></p>
            <p>
            <% if current_user.id == @product.user_id %>
              <%= link_to 'Editar', edit_product_path(@product), role: 'button', class: 'btn btn-success btn-sm' %>
            <% end %>
            </p>
          </div>
        </div>
      </div>
  </div>


<%= link_to 'Voltar', products_path, role: 'button', class: 'btn btn-success btn-sm' %>


