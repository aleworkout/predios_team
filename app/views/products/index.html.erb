<p id="notice"><%= notice %></p>

<div>
  <%= search_form_for @q do |f| %>

  <%= f.label "Produto" %>
  <%= f.search_field :name_cont %>

  <%= f.submit "Procurar" %>

  <% end %>
</div>

<h1>Todos os produtos</h1>
<%= link_to 'Novo Produto', new_product_path, role: 'button', class: 'btn btn-warning btn-block' %>
<hr />
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag(product.image_url) if product.image? %><br>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p>$<%= product.price %>.-</p>
            <p>
            <%= link_to 'Veja o produto', product, role: 'button', class: 'btn btn-success btn-sm' %>
            <% if current_user.id == product.user_id %>
              <%= link_to 'Editar', edit_product_path(product), role: 'button', class: 'btn btn-success btn-sm' %>
              <%= link_to 'Apagar', product, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-success btn-sm' %>
            <% end %>  
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'Novo Produto', new_product_path, role: 'button', class: 'btn btn-warning btn-block' %>
