<%= form_for @pago, validate: true do |f| %>
  <% if @pago.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pago.errors.count, "error") %> prohibited this pago from being saved:</h2>

      <ul>
      <% @pago.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if user_signed_in? %>
  <% if current_user.email == "ale@ale.cl" %>
    <div class="field">
      <%= f.label :checked %><br>
      <%= f.check_box :checked %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.number_field :user_id %>
    </div>
  <% end %>
  <% end %>

  <div class="field">
    <%= f.label 'Membresia' %><br>
    <%= f.collection_select :member_id, @members, :id, :name %>
  </div>
  <div class="field">
    <%= f.label 'Fecha en que realizó el pago' %><br>
    <%= f.date_select :payment_date %>
  </div>
  <div class="field">
    <%= f.label 'Pago' %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label 'Nombre de su edificio/condominio' %><br>
    <%= f.text_field :predio_name %>
  </div>
  <div class="field">
    <%= f.label 'Dirección de su edificio/condominio' %><br>
    <%= f.text_area :predio_address %>
  </div>
  <div class="field">
    <%= f.label 'Mensaje' %><br>
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit "Listo", class: 'button button3 btn-block', role: 'button' %>
  </div>
<% end %>
